<%= form_for(@highscore, :html => { :role => "form", :class => "form-inline"}) do |f| %>
  <% if @highscore.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        <%= pluralize(@highscore.errors.count, "error") %> prevented this highscore from being saved:
      </div>
      <ul>
      <% @highscore.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
      </ul>
    </div>
    <div id="reload" class="hidden">true</div>
  <% end %>



<div class="showable">
  <div class="form-group field hidden score-form">
    <%= f.label :score %><br>
    <%= f.text_field :score %>
  </div>
  <div class="form-group field showable score-form" id="name">
    <%= f.label :name, { :class => "sr-only" } %>
    <%= f.text_field :name, { :class => "form-control", :placeholder => "Enter your name" } %>
  </div>
  <div class="form-group actions showable score-form" id="submit">
    <%= f.submit "Submit score", { :class => "btn btn-and" } %>
  </div>
<% end %>
</div>

